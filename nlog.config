<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="C:\c#Projects\Mailer_Scheduler\AllLogs\internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <target xsi:type="File"
            archiveNumbering="DateAndSequence"
            archiveAboveSize="5000000"
            name="allfile"
            fileName="C:\c#Projects\Mailer_Scheduler\AllLogs\nlog-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <target xsi:type="File"
            archiveNumbering="DateAndSequence"
            archiveAboveSize="5000000"
            name="warnFile"
            fileName="C:\c#Projects\Mailer_Scheduler\AllLogs\Warn_${shortdate}.log"  />

    <target xsi:type="File"
            archiveNumbering="DateAndSequence"
            archiveAboveSize="5000000"
            name="errorFile"
            fileName="C:\c#Projects\Mailer_Scheduler\AllLogs\Error_${shortdate}.log"  />

    <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
    <target xsi:type="File"
            archiveNumbering="DateAndSequence"
            archiveAboveSize="5000000"
            name="requestFile"
            fileName="C:\c#Projects\Mailer_Scheduler\AllLogs\nlog-own-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minLevel="Trace" writeTo="allfile" />
    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <!--<logger name="Microsoft.*" maxLevel="Info" final="true  />-->
    <logger name="*" minLevel="Error" writeTo="errorFile"   final="true" />
    <logger name="*" minLevel="Warn"  writeTo="warnFile"    final="true" />
    <logger name="*" minLevel="Info"  writeTo="requestFile" final="true" />
  </rules>
</nlog>